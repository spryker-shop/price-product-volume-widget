{% extends molecule('money-price') %}

{% define config = {
    name: 'volume-price',
    tag: 'volume-price',
} %}

{% define data = {
    amount: required,
    originalAmount: null,
    precision: 100,
} %}

{% define attributes = {
    itemscope: '',
    itemprop: 'offers',
    itemtype: 'https://schema.org/Offer',
} %}

{% block body %}
    {% set precision = data.precision %}

    {% if data.originalAmount is not empty and data.originalAmount > data.amount -%}
        <span itemprop="price" content="{{ data.originalAmount / precision }}" class="{{ config.name }}__amount {{ config.name }}__amount--original">{{ data.originalAmount | money }}</span>
    {%- endif -%}

    <span class="{{ config.name }}__amount">

        {% include atom('icon') with {
            class: config.name ~ '__tag',
            data: {
                name: 'tag'
            }
        } only %}
        <span itemprop="price" content="{{ data.amount / precision }}" class="{{ config.jsName }}__price {{ config.name }}__price">
            {{ data.amount | money }}
        </span>
    </span>
{% endblock %}
